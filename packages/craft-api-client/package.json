{
  "name": "craft-api-client",
  "version": "0.0.24",
  "description": "A TypeScript client library for interacting with the Craft CMS API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./preview": "./dist/preview.js"
  },
  "bin": {
    "craft-codegen": "./dist/craft-codegen.js"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.10.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run codegen && tsup",
    "test": "vitest run",
    "test:unit": "vitest run tests/*.test.ts",
    "test:integration": "vitest run tests/integration/*.test.ts",
    "test:all": "vitest run",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "prepublishOnly": "pnpm test && pnpm build",
    "publish": "npm publish --access public",
    "dev": "pnpm build --watch",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "keywords": [
    "craft",
    "cms",
    "api",
    "client",
    "graphql",
    "typescript"
  ],
  "author": "Kadeau LLC",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/kadeau/craft-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/kadeau/craft-api-client/issues"
  },
  "homepage": "https://github.com/kadeau/craft-api-client#readme",
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "lilconfig": "^3.0.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/schema-ast": "^4.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/typed-document-node": "^5.0.1",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "tsup": "^8.0.2",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {}
}
