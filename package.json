{
  "name": "craft-api-client",
  "version": "1.0.0",
  "description": "A TypeScript client library for interacting with the Craft CMS API",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.10.0"
  },
  "files": [
    "dist/src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "prepublishOnly": "pnpm test && pnpm build"
  },
  "keywords": ["craft", "cms", "api", "client", "graphql", "typescript"],
  "author": "Craft API Client Team",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  }
}
